else ifeq ($(config),debug_wxdll_x64)
  wxsqlite3_config = debug_wxdll_x64
  minimal_config = debug_wxdll_x64
  treeview_config = debug_wxdll_x64

else ifeq ($(config),release_wxdll_x32)
