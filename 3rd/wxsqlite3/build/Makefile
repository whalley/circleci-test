else ifeq ($(config),debug_wxdll_win64)
  wxsqlite3_config = debug_wxdll_win64
  minimal_config = debug_wxdll_win64
  treeview_config = debug_wxdll_win64

else ifeq ($(config),release_wxdll_win32)
